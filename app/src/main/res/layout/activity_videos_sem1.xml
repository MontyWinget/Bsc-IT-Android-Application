<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Videos">

    <TextView
        android:id="@+id/vidSem1Sub"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:gravity="center|center_vertical"
        android:text="Videos - Semester 1"
        android:textStyle="bold"
        android:textAlignment="center" />



    <Button
        android:id="@+id/buttonVidImperativeProgramming"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/mybutton"
        android:layout_below="@id/vidSem1Sub"
        android:text="Imperative Programming" />

    <Button
        android:id="@+id/buttonVidDigitalElectronics"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/mybutton"
        android:layout_below="@id/buttonVidImperativeProgramming"
        android:layout_marginTop="15dp"
        android:text="Digital Electronics" />

    <Button
        android:id="@+id/buttonVidOperatingSystems"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/mybutton"
        android:layout_below="@id/buttonVidDigitalElectronics"
        android:layout_marginTop="15dp"
        android:text="Operating Systems" />

    <Button
        android:id="@+id/buttonVidDiscreteMathematics"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/mybutton"
        android:layout_below="@id/buttonVidOperatingSystems"
        android:layout_marginTop="15dp"
        android:text="Discrete Mathematics" />

    <Button
        android:id="@+id/buttonVidCommunicationSkills"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/mybutton"
        android:layout_below="@id/buttonVidDiscreteMathematics"
        android:layout_marginTop="15dp"
        android:text="Communication Skills" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/appblue"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="bottom"/>

</RelativeLayout>